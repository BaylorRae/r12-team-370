<!DOCTYPE html>
<html>
<head>
  <title>Churumelas</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link rel="icon" type="image/png" href="assets/favicon.png">
</head>
<body>
  <div id="logo">
    <a href="/game/start"><%= image_tag "logo-#{ flash[:error] ? "red" : flash[:message] ? "green" : "medium"}.png" %></a>
    
  </div>
  <% flash.each do |key, value| 
      next if value.blank? %>
    <div class="box <%= key %>">
      <p class="center"><%= value %></p>
    </div>
  <% end %>
<%= yield %>
</body>
</html>
